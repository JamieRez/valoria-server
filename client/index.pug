body

  h2.valoriaSecondHeader.hideScrollbar

  .valoriaAuth
    h1.valoriaHeader Valoria
    input.valoriaUsernameInput(placeholder="username")
    input.valoriaPasswordInput(placeholder="password" type="password")
    .valoriaAuthSubmit="JOIN WITH USERNAME & PASSWORD"
    .valoriaJoinWithWeb3Wallet
      | JOIN WITH WEB3

  .valoriaChat
    .chatSidebar
      .chatOnline
        .chatOnlineLabel ONLINE
        .chatOnlineList
      .chatContacts

    .chatMain
      h1.valoriaHeader Valoria
      .chatNav
        .chatName.hideScrollbar SELECT A PERSON TO CHAT WITH
        .chatVideoBtn VIDEO CHAT
      .chatMsgContainer
        .chatMsgContainerList
      .chatMsgForm
        input.chatMsgInput(placeholder="SEND A MESSAGE")
        .chatMsgInputSubmit SEND
    .chatVideos
      video.chatPeerVideo(controls autoplay playsinline)
      video.chatUserVideo(muted controls autoplay playsinline)

